<h1>Listing pages</h1>

<table class="table">
  <tr>
    <th>Title</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.title %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= button_to 'Add Chapters', :action => 'add_to_album', :id => page %></td>
    <td><%= button_to 'Sort Chapters', :action => 'sort_c', :id => page %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>