<h1>Listing chapters</h1>

<%= button_to 'Go Back', :action => 'go_to_page' %>

<br />

<table class="table">
  
	<tr>
    <th>Page</th>
    <th>Position</th>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
  </tr>

<% @chapters.each do |chapter| %>
  <tr>
    <td><%=h chapter.page.title %></td>
    <td><%=h chapter.position %></td>
    <td><%=h chapter.title2 %></td>
    <td><%=h chapter.description %></td>
    <td><%=h chapter.image_url%></td>
    <td><%= link_to 'Show', chapter %></td>
    <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
    <td><%= link_to 'Destroy', chapter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<table>
	 <tr>
	 	<td><%= button_to 'New Title', :action => 'new_title' %></td>
	 	<td><%= button_to 'New Text', :action => 'new_text' %></td>
	 	<td><%= button_to 'New Picture', :action => 'new_pic' %></td>
		</tr>
</table


