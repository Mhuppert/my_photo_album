<h1>New chapter</h1>

<% form_for(@chapter) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :page_id %><br />
    <%= f.select(:page_id, Page.all.collect {|t| [ t.title, t.id ] }, { :include_blank => true }) %>
  </p>
  <p>
    <%= f.label :title2 %><br />
    <%= f.text_field :title2 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :date_chapter %><br />
    <%= f.datetime_select :date_chapter %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', chapters_path %>