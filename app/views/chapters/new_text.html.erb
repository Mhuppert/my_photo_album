<h1>New chapter</h1>

<% form_for(@chapter) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.hidden_field :page_id %>
   </p>
  
  <p>
    <%= f.hidden_field :title2 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.hidden_field :image_url %>
  </p>
  <p>
    <%= f.hidden_field :date_chapter %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', chapters_path %>